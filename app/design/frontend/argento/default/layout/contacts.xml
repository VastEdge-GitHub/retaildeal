<layout version="0.1.0">
    <default>
        <reference name="footer_links">
            <action method="addLink" translate="label title" module="contacts" ifconfig="contacts/contacts/enabled"><label>Contact Us</label><url>contacts</url><title>Contact Us</title><prepare>true</prepare></action>
        </reference>
    </default>

    <contacts_index_index translate="label">
        <label>Contact Us Form</label>
        <reference name="head">
	<!-- Changes Start to add meta title, meta description and meta keyword at contact us page -->

            <action method="setTitle" translate="title" module="contacts"><title>RetailDeal Contact Form: Send us an Email With Your Feedback</title></action>
	    <action method="setDescription" translate="description" module="contacts"><description>RetailDeal wants to hear your comments in order to provide a better customer experience. Please fill out this form for a quick, helpful response.</description></action>
            <action method="setKeywords" translate="keywords" module="contacts"><keywords>contact, contact us, retaildeal, leaseitkeepit, rent to own, lease to own, buy now pay later, low monthly payments</keywords></action>

	<!-- Changes End -->
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="contacts"><title>Contact Us</title></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="contactForm" template="contacts/form.phtml"/>
        </reference>
    </contacts_index_index>
</layout>
